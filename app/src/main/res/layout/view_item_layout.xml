<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.ebinumer.inventorymodule.data.dataBase.GrnItemsEntity" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/table_background_border"
    android:weightSum="3"
    >
    <TextView
        android:id="@+id/txt_item_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@{data.grnItemCode}"
        android:hint="qwer"
        android:gravity="center"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="qwer"
        android:text="@{data.grnItemName}"
        android:gravity="center"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/txt_item_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{data.grnItemsQty}"
        android:layout_weight="1"
        android:hint="qwer"
        android:gravity="center"
        />
</LinearLayout>
</layout>